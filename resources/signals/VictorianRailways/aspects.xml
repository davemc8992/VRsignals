    xsi:noNamespaceSchemaLocation = "http://jmri.org/xml/schema/aspecttable.xsd"
>
  <name>Victorian Railways </name>
  <date>1915 onwards</date>
  <reference>Two and Three Position signalling described on Mark Bau's website - http://www.victorianrailways.net/signaling/signalhome.html 
  </reference>
  <reference>Two and Three Position signalling described at vicsig.net https://vicsig.net/index.php?page=infrastructure&section=signalling
  </reference>

  <copyright xmlns="http://docbook.org/ns/docbook">
    <year>2023</year><holder>JMRI</holder>
  </copyright>

  <authorgroup xmlns="http://docbook.org/ns/docbook" >
    <author>
        <personname><firstname>David</firstname><surname>McMorran</surname></personname>
        <email></email>
    </author>    
  </authorgroup>

  <revhistory xmlns="http://docbook.org/ns/docbook">
    <revision>
        <revnumber>1</revnumber>
        <date>2023-02-02</date>
        <authorinitials>DBMc</authorinitials>
        <revremark>Initial version</revremark>
    </revision>    
  </revhistory>

  <aspects>

    <aspect>
      <name>Clear Normal Speed</name>
      <rule></rule>
      <indication>Proceed</indication>
      <reference></reference>
      <comment></comment>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <route>Either</route>
    </aspect>

    <aspect>
      <name>Normal Speed Warning</name>
      <rule></rule>
      <indication>Proceed</indication>
      <reference></reference>
      <speed>Normal</speed>
      <speed2>Stop</speed2>
      <route>Either</route>
    </aspect>

    <aspect>
      <name>Reduce to Medium Speed</name>
      <rule></rule>
      <indication>Proceed approaching second signal at medium speed</indication>
      <reference></reference>
      <speed>Normal</speed>
      <speed2>Medium</speed2>
      <route>Either</route>
    </aspect>

    <aspect>
      <name>Clear Medium Speed</name>
      <rule></rule>
      <indication>Proceed approaching next signal at medium speed</indication>
      <reference></reference>
      <speed>Medium</speed>
      <speed2>Normal</speed2>
      <route>Either</route>
      </aspect>

    <aspect>
      <name>Medium Speed Warning</name>
      <rule></rule>
      <indication>Proceed; Prepare to stop at next signal</indication>
      <reference></reference>
      <speed>Medium</speed>
      <speed2>Stop</speed2>
      <route>Either</route>
    </aspect>

    <aspect>
      <name>Clear Low Speed</name>
      <rule></rule>
      <indication>Proceed; Prepare to stop at next signal</indication>
      <reference></reference>
      <speed>Slow</speed>
      <speed2>Normal</speed2>
      <route>Either</route>
    </aspect>
      
    <aspect>
      <name>Low Speed Caution</name>
      <rule></rule>
      <indication>Proceed at low speed preparing to stop</indication>
      <reference></reference>
      <speed>Restricted</speed>
      <speed2>Restricted</speed2>
      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Stop</name>
      <rule></rule>
      <indication>Stop, do not proceed</indication>
      <reference></reference>
      <speed>Stop</speed>
      <speed2></speed2>
      <route>Either</route>
    </aspect>

    <aspect>
      <name>Proceed</name>
      <title></title>
      <indication>Proceed</indication>
      <description></description>
      <reference></reference>
      <comment></comment>
      <imagelink></imagelink>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <route></route>
      <dccAspect></dccAspect>
    </aspect>

    <aspect>
      <name>Warning</name>
      <title></title>
      <indication>Proceed, but be ready to stop at the next signal</indication>
      <description></description>
      <reference></reference>
      <comment></comment>
      <imagelink></imagelink>
      <speed>Normal</speed>
      <speed2>Stop</speed2>
      <route></route>
      <dccAspect></dccAspect>
    </aspect>

    <aspect>
      <name>Proceed Left</name>
      <title></title>
      <indication>Proceed left road</indication>
      <description></description>
      <reference></reference>
      <comment>Two position signal</comment>
      <imagelink></imagelink>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <route></route>
      <dccAspect></dccAspect>
    </aspect>

    <aspect>
      <name>Proceed Centre</name>
      <title></title>
      <indication>Proceed centre road</indication>
      <description></description>
      <reference></reference>
      <comment>Two position signal</comment>
      <imagelink></imagelink>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <route></route>
      <dccAspect></dccAspect>
    </aspect>

    <aspect>
      <name>Proceed Right</name>
      <title></title>
      <indication>Proceed right road</indication>
      <description></description>
      <reference></reference>
      <comment>Two position signal</comment>
      <imagelink></imagelink>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <route></route>
      <dccAspect></dccAspect>
    </aspect>

    <aspect>
      <name>Proceed with Caution</name>
      <title></title>
      <indication>Proceed</indication>
      <description></description>
      <reference></reference>
      <comment></comment>
      <imagelink></imagelink>
      <speed>Restricted</speed>
      <speed2>Restricted</speed2>
      <route></route>
      <dccAspect></dccAspect>
    </aspect>

    <aspect>
      <name>Caution</name>
      <title></title>
      <rule></rule>
      <indication>Proceed with caution track could be occupied</indication>
      <description></description>
      <reference></reference>
      <comment>Two position signal</comment>
      <speed>Restricted</speed>
      <speed2>Restricted</speed2>
      <route></route>
      <dccAspect></dccAspect>
    </aspect>

  </aspects>


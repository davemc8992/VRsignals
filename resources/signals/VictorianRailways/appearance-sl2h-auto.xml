  <aspecttable>Victorian Railways</aspecttable>
  <name>Searchlight 2 heads Automatic</name>
  <reference>As described on Mark Bau's website - http://www.victorianrailways.net/signaling/signalhome.html.
</reference>
  <description>Appearances for common two-searchlight Automatic signal head</description>
  
  <appearances>

    <appearance>
      <aspectname>Clear Normal Speed</aspectname>
      <show>green</show>
      <show>red</show>
      <reference></reference>
      <comment>aka Top green</comment>
      <imagelink>preference:resources/icons/smallschematics/aspects/VictorianRailways/sl2ha-GR.png</imagelink>
    </appearance>

    <appearance>
      <aspectname>Normal Speed Warning</aspectname>
      <show>yellow</show>
      <show>red</show>
      <reference></reference>
      <comment>aka Top yellow</comment>
      <imagelink>preference:resources/icons/smallschematics/aspects/VictorianRailways/sl2ha-YR.png</imagelink>
    </appearance>

    <appearance>
      <aspectname>Reduce to Medium Speed</aspectname>
      <show>yellow</show>
      <show>green</show>
      <reference></reference>
      <imagelink>preference:resources/icons/smallschematics/aspects/VictorianRailways/sl2ha-YG.png</imagelink>
    </appearance>

    <appearance>
      <aspectname>Clear Medium Speed</aspectname>
      <show>red</show>
      <show>green</show>
      <reference></reference>
      <comment>aka Bottom green</comment>
      <imagelink>preference:resources/icons/smallschematics/aspects/VictorianRailways/sl2ha-RG.png</imagelink>
    </appearance>

    <appearance>
      <aspectname>Medium Speed Warning</aspectname>
      <show>red</show>
      <show>yellow</show>
      <reference></reference>
      <comment>aka Bottom yellow</comment>
      <imagelink>preference:resources/icons/smallschematics/aspects/VictorianRailways/sl2ha-RY.png</imagelink>
    </appearance>

    <appearance>
      <aspectname>Stop</aspectname>
      <show>red</show>
      <show>red</show>
      <reference></reference>
      <imagelink>preference:resources/icons/smallschematics/aspects/VictorianRailways/sl2ha-RR.png</imagelink>
    </appearance>

  </appearances>
  <specificappearances>
    <danger>
      <aspect>Stop</aspect>
    </danger>
    <held>
      <aspect>Stop</aspect>
    </held>
  </specificappearances>

  <aspectMappings>
    <aspectMapping>
      <advancedAspect>Clear Normal Speed</advancedAspect>
      <ourAspect>Clear Normal Speed</ourAspect>
      <ourAspect>Clear Medium Speed</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Normal Speed Warning</advancedAspect>
      <ourAspect>Clear Normal Speed</ourAspect>
      <ourAspect>Clear Medium Speed</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Reduce to Medium Speed</advancedAspect>
      <ourAspect>Clear Normal Speed</ourAspect>
      <ourAspect>Clear Medium Speed</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Clear Medium Speed</advancedAspect>
      <ourAspect>Reduce to Medium Speed</ourAspect>
      <ourAspect>Clear Medium Speed</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Medium Speed Warning</advancedAspect>
      <ourAspect>Reduce to Medium Speed</ourAspect>
      <ourAspect>Clear Medium Speed</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Low Speed Caution</advancedAspect>
      <ourAspect>Normal Speed Warning</ourAspect>
      <ourAspect>Medium Speed Warning</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Stop</advancedAspect>
      <ourAspect>Normal Speed Warning</ourAspect>
      <ourAspect>Medium Speed Warning</ourAspect>
    </aspectMapping>

  </aspectMappings>
</appearancetable>  
